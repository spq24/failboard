$boxes = $('<%= j render(@fails) %>');
$('#fails').append( $boxes ).imagesLoaded( function(){
	$('#fails').masonry( 'reload');
});
<% if (@fails.current_page < @fails.num_pages) %>	
	setTimeout(function(){
		$('.pagination').replaceWith('<%= j paginate(@fails) %>');
	},1000);						
<% else %>
	$('.pagination').remove();
<% end %>
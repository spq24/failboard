<div class="box">

		<center><img src="https://s3.amazonaws.com/failboard/tack.png" id="tack" /></center><br />

	<center>
		<strong><p style="font-size: 16px;"><u><%= fail.fail_title %></u></p></strong>

		<% if File.extname(fail.image_url).include? "mp4" %>
		<%= link_to (image_tag "https://s3.amazonaws.com/failboard/failvideo.png"), fail %>
		<% else %>
		<%= link_to (image_tag fail.image), fail %>
		<% end %>
	</center>
	<hr></hr>
     <p class="description"style="font-size: 14px;">
      	<%= fail.description %>
 	 </p>
 	 <br />
 	 <% if fail.tag_list.any? %>
 	 <p>Tags: <%= raw fail.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
 	 <% end %>
 	 <br />
 	 <p>
 	 	<strong>
 	 		
 	 	
	 </p>
	<div class="pull-right">
		<% if fail.up_votes > 0 %>
				<center>
					<% if fail.up_votes == 1 %>
							<p><%= link_to "#{fail.up_votes} LOL", fail %></p>
						<% else %>
							<p><%= link_to "#{fail.up_votes} LOLs", fail %></p>
					<% end %>
				</center>
		<% end %>
	</div>
	Posted by <%= link_to fail.user.name, fail.user %>
	</strong>
</div>

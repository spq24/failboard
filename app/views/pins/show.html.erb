<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<p>
				<center>
				  <%= image_tag @pin.image %><br />
				  <%= @pin.description %>
			  	</center>
			</p>
			<center>
					<% if current_user == @pin.user %>
						<%= link_to 'Edit', edit_pin_path(@pin) %> |
						<%= link_to 'Destroy', @pin, method: :delete, data: { confirm: 'Are you sure?' } %> |
					<% end %>
				<%= link_to 'Back', pins_path %>
			</center>
		</div>
	</div>
</div>


